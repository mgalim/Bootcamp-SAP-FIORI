<mvc:View
    xmlns:vbm="sap.ui.vbm"
    controllerName="com.bootcamp.sapui5.freestyle.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <Page
        id="pageHome"
        title="{i18n>title}"
        class="myAppDemoWT"
    >
        <content>
            <Panel
                id="panelHome"
                headerText="{i18n>panelTitle}"
                class="sapUiResponsiveMargin"
                width="auto"
            >
                <Button
                    id="btnSearch"
                    text="{i18n>textSearch}"
                    press=".onPress"
                    class="sapUiSmallMarginEnd"
                />
            </Panel>
        </content>
    </Page>
</mvc:View>
