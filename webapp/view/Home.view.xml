<mvc:View
    xmlns:vbm="sap.ui.vbm"
    controllerName="com.bootcamp.sapui5.freestyle.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <Page
        title="{i18n>title}"
        class="myAppDemoWT"
    >
        <content>
            <Panel
                headerText="{i18n>panelTitle}"
                class="sapUiResponsiveMargin"
                width="auto"
            >
                <content>
                    <Button
                        id="btnSearch"
                        text="{i18n>textSearch}"
                        press=".onPress"
                        class="sapUiSmallMarginEnd"
                    />
                </content>
            </Panel>
            <mvc:XMLView
                viewName="com.bootcamp.sapui5.freestyle.view.ProductList"
            />
        </content>
    </Page>
</mvc:View>
