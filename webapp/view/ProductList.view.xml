<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
>
    <List
        headerText="{i18n>productListTitle}"
        class="sapUiResponsiveMargin"
        width="auto"
        items="{products>/Products}"
    >
        <items>
            <ObjectListItem
                title="{products>ProductName}"
                intro="{products>QuantityPerUnit}"
                number="{
        parts: [
            'products>UnitPrice',
            {value: 'USD'}
        ],
        type: 'sap.ui.model.type.Currency',
        formatOptions: {
            showMeasure: true
        }
    }"
            />
        </items>
    </List>
</mvc:View>
