<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Panel
        headerText="{i18n>panelTitle}"
        class="sapUiResponsiveMargin"
        width="auto"
    >
        <content>
            <HBox
                width="100%"
                alignItems="Center"
            >
                <Button
                    text="{i18n>textSearch}"
                    press=".onPress"
                    class="sapUiSmallMarginEnd"
                />
                <ToolbarSpacer />
                <Title text="Products" />
                <ToolbarSpacer />
            </HBox>
        </content>
    </Panel>
</core:FragmentDefinition>
